<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="100dp">

        <!-- Header Card with Gradient -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/header_gradient"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥ STREAKS"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textViewCurrentStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Days Streak!"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FBBF24"
                    android:layout_marginBottom="12dp" />

                <!-- Streak Chain -->
                <LinearLayout
                    android:id="@+id/streakChain"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Weekly Progress -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWeeklyProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“… This Week"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#6366F1"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressWeekly"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#10B981"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewWeeklyProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/7 days"
                        android:textSize="12sp"
                        android:textColor="#64748B" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Monthly Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“† This Month"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#8B5CF6"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/progressMonthly"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progressTint="#EC4899"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/textViewMonthlyProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/30 days"
                        android:textSize="12sp"
                        android:textColor="#64748B" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Contribution Heatmap -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Activity Heatmap"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 6 weeks"
                    android:textSize="12sp"
                    android:textColor="#9CA3AF"
                    android:layout_marginBottom="12dp" />

                <GridLayout
                    android:id="@+id/heatmapCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="6"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Less"
                        android:textSize="10sp"
                        android:textColor="#9CA3AF"
                        android:layout_marginEnd="4dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#E5E7EB"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#F87171"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#FBBF24"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#34D399"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="#10B981"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textSize="10sp"
                        android:textColor="#9CA3AF" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Achievements -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Achievements"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="16dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/achievementRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center" />

                </HorizontalScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Statistics Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStreakStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textViewStatsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Streak Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textViewStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: 0 | Best: 0 days"
                    android:textSize="16sp"
                    android:textColor="#64748B" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Insights Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInsights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Your Insights"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewWeekStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 weeks in a row"
                        android:textSize="14sp"
                        android:textColor="#374151" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/textViewMonthStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 months logged"
                        android:textSize="14sp"
                        android:textColor="#374151" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F9FAFB"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textViewBestDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Most active: N/A"
                        android:textSize="14sp"
                        android:textColor="#374151" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Motivational Quote -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FEF3C7">

            <TextView
                android:id="@+id/textViewStreakQuote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep pushing forward!"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#92400E"
                android:gravity="center"
                android:padding="20dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>